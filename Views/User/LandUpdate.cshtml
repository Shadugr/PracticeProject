@model PracticeProject.Data.Entities.Advert;
@{
    ViewData["Title"] = "Land Update";
}

<div class="row justify-content-center">
    <div class="col-6">
        <form asp-action="LandUpdate" method="post" enctype="multipart/form-data">
            <input type="hidden" name="inputId" value="@Model.Id" />
            <div class="row">

                <div class="col-12">
                    <div class="form-group">
                        <label for="inputTitle">Title</label>
                        <input type="text" required class="form-control" name="inputTitle" id="inputTitle" value="@Model.Title" placeholder="Title">
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label for="inputTitle">Location</label>
                        <input type="text" required class="form-control" name="inputLocation" id="inputLocation" value="@Model.Location" placeholder="Location">
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label for="inputMultipleImages">Upload images</label>
                        <input class="form-control" type="file" name="inputMultipleImages" id="inputMultipleImages" accept="image/*" multiple />
                        <output></output>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label>Type of land</label>
                        <select class="form-select" required name="typeOfLand" id="typeOfLand">
                            @switch (Model.Land.TypeOfLand)
                            {
                                case "01.05":
                                    <option value="01.03">01.03</option>
                                    <option value="01.05" selected>01.05</option>
                                    <option value="02.01">02.01</option>
                                    <option value="03.10">03.10</option>
                                    break;
                                case "02.01":
                                    <option value="01.03">01.03</option>
                                    <option value="01.05">01.05</option>
                                    <option value="02.01" selected>02.01</option>
                                    <option value="03.10">03.10</option>
                                    break;
                                case "03.10":
                                    <option value="01.03">01.03</option>
                                    <option value="01.05">01.05</option>
                                    <option value="02.01">02.01</option>
                                    <option value="03.10" selected>03.10</option>
                                    break;
                                default:
                                    <option value="01.03" selected>01.03</option>
                                    <option value="01.05">01.05</option>
                                    <option value="02.01">02.01</option>
                                    <option value="03.10">03.10</option>
                                    break;
                            }
                        </select>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for="inputArea">Area</label>
                        <input type="text" pattern="[0-9]+" required class="form-control" name="inputArea" id="inputArea" value="@Model.Land.Area" placeholder="Area">
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label>Dimension</label>
                        <select class="form-select" required name="areaDimension" id="areaDimension">
                            @switch (Model.Land.AreaDimension)
                            {
                                case "sq.ft":
                                    <option value="sq.m">sq.m</option>
                                    <option value="sq.ft" selected>sq.ft</option>
                                    <option value="ha">ha</option>
                                    break;
                                case "ha":
                                    <option value="sq.m">sq.m</option>
                                    <option value="sq.ft">sq.ft</option>
                                    <option value="ha" selected>ha</option>
                                    break;
                                default:
                                    <option value="sq.m" selected>sq.m</option>
                                    <option value="sq.ft">sq.ft</option>
                                    <option value="ha">ha</option>
                                    break;
                            }
                        </select>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label for="inputPrice">Price</label>
                        <input type="text" required pattern="[0-9]+" class="form-control" name="inputPrice" id="inputPrice" value="@Model.Price" placeholder="Price">
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label for="inputDescription">Description</label>
                        <textarea class="form-control" required rows="5" name="inputDescription" id="inputDescription">@Model.Description</textarea>
                    </div>
                </div>

                <div class="col-12 mt-2 form-group">
                    <button type="submit" class="btn btn-primary">Update Land</button>
                </div>
            </div>

        </form>

    </div>
</div>