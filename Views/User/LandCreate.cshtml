@{
    ViewData["Title"] = "Land Create";
}

<div class="row justify-content-center">
    <div class="col-6">
        <form asp-action="LandCreate" method="post" enctype="multipart/form-data">
            <div class="row">

                <div class="col-12">
                    <div class="form-group">
                        <label for="inputTitle">Title</label>
                        <input type="text" required class="form-control" name="inputTitle" id="inputTitle" placeholder="Title">
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label for="inputTitle">Location</label>
                        <input type="text" required class="form-control" name="inputLocation" id="inputLocation" placeholder="Location">
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label for="inputMultipleImages">Upload images</label>
                        <input class="form-control" required type="file" name="inputMultipleImages" id="inputMultipleImages" accept="image/*" multiple />
                        <output></output>
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        <label>Type of land</label>
                        <select class="form-select" required name="typeOfLand" id="typeOfLand">
                            <option value="01.03" selected>01.03</option>
                            <option value="01.05">01.05</option>
                            <option value="02.01">02.01</option>
                            <option value="03.10">03.10</option>
                        </select>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label for="inputArea">Area</label>
                        <input type="text" pattern="[0-9]+" required class="form-control" name="inputArea" id="inputArea" placeholder="Area">
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label>Dimension</label>
                        <select class="form-select" required name="areaDimension" id="areaDimension">
                            <option value="sq.m" selected>sq.m</option>
                            <option value="sq.ft">sq.ft</option>
                            <option value="ha">ha</option>
                        </select>
                    </div>
                </div>
                
                <div class="col-12">
                    <div class="form-group">
                        <label for="inputPrice">Price</label>
                        <input type="text" required pattern="[0-9]+" class="form-control" name="inputPrice" id="inputPrice" placeholder="Price">
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <label for="inputDescription">Description</label>
                        <textarea class="form-control" required rows="5" name="inputDescription" id="inputDescription"></textarea>
                    </div>
                </div>

                <div class="col-12 mt-2 form-group">
                    <button type="submit" class="btn btn-primary">Create Land</button>
                </div>
            </div>

        </form>

    </div>
</div>